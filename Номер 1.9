package main

import (
	"fmt"
)

func main() {
	// Исходный массив чисел
	numbers := []int{1, 2, 3, 4, 5}

	// Создаём два канала: для входных чисел и для результатов
	ch1 := make(chan int)
	ch2 := make(chan int)

	// Первая горутина — генератор чисел
	go func() {
		for _, x := range numbers {
			ch1 <- x // отправляем число в первый канал
		}
		close(ch1) // закрываем канал после завершения генерации
	}()

	// Вторая горутина — обработчик (x * 2)
	go func() {
		for x := range ch1 { // читаем из первого канала
			ch2 <- x * 2 // записываем результат во второй канал
		}
		close(ch2) // закрываем второй канал после обработки всех чисел
	}()

	// Чтение из второго канала и вывод результата
	for result := range ch2 {
		fmt.Println(result)
	}
}
